<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="1"
    android:padding="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="miituo.com.miituo.ReportOdometerActivity"
    tools:showIn="@layout/activity_report_odometer">

    <TextView
        android:text="Toma un fotografÃ­a a tu odometro(medidor de Kms) con zoom y lo mas claro posible para que podamos detectar la cantidad."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.78"
        android:id="@+id/rpt_odometerImageView"
        app:srcCompat="@android:drawable/ic_menu_camera"
        android:src="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/editTextodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:ems="10"
        android:hint="Coloca tu odometro"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText2odo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06"
        android:ems="10"
        android:hint="Confirma tu odometro"
        android:inputType="number" />

    <Button
        android:text="Finalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_rptodometer"
        android:layout_weight="0.06"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="87dp" />

</RelativeLayout>